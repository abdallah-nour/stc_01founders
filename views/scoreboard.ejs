<%- include('./layouts/nav.ejs'); %>
<main role="main" style="padding-top: 3.5rem;margin-bottom: 100px;">
		
	<div class="jumbotron" style="text-align: center;">
		<div class="container">
			<h1>Scoreboard</h1>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped">
					<thead>
					<tr>
                        <td class="text-center" style="width: 10px;"><b>Place</b></td>
						<td class="text-center" style="width: 10px;"><b>User</b></td>
						<td class="text-center" style="width: 10px;"><b>Score</b></td>
					</tr>
					</thead>
					<tbody>
					
<% let n=0; %>
<% users.forEach((user)=>{ %>
<%  n++; %>
    <tr>
        <td class="text-center" style="width: 10px;"><%= n %></td>
        <td class="text-center" style="width: 10px;"><%= user.username%></td>
        <td class="text-center" style="width: 10px;"><%= user.score %></td>
    </tr>

<% })%>											
					</tbody>
				</table>
			</div>
		</div>
		
			<div class="row">
				<div class="col-md-12">
					<div class="text-center">Page
						<br>
						
						<select class="page-select">
							
							<option selected="">1</option>
							
							<option>2</option>
							
							<option>3</option>
							
							<option>4</option>
							
							<option>5</option>
							
							<option>6</option>
							
						</select>
						
						<a href="/users?page=2">&gt;&gt;&gt;</a>
						
					</div>
				</div>
			</div>
		
	</div>

	</main>


  <footer class="footer">
    <div class="container text-center">
        <a href="https://01founders.co" class="text-secondary">
            <small class="text-muted">Powered by Jas</small>
        </a>
    </div>

</footer>
